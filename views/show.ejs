<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="" width="200px;">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <div class="extra">
                <span>Posted by: <%= blog.author.username %></span>
            </div>
            <% if(user && blog.author.id.equals(user._id)) { %>
                <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>            
                <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            <% } %>
        </div>
    </div>
</div>

<% include partials/footer %>