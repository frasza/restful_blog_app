<% include partials/header %>

<% blogs.forEach(blog => { %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>" alt="" width="200px;">
        <p><%= blog.body.substring(0, 100) %> ...</p>
        <span><%= blog.created %></span>
        <a href="/blogs/<%= blog._id %>">Read more</a>
    </div>
<% }) %>

<% include partials/footer %>